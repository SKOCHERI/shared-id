<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />
        <meta name="description" content="The universal ID for the programmatic advertising community" />
        <style>
            html { background-color: #cdecff; font-family: -apple-system,BlinkMacSystemFont,avenir next,avenir,helvetica neue,helvetica,ubuntu,roboto,noto,segoe ui,arial,sans-serif; font-size: 120%; }
            main { max-width: 720px; margin-top: 5vh; margin-right: auto; margin-left: auto; border-radius: 4px; border: 1px solid #001b44; padding: 1rem 2rem; background-color: white; color: #001b44; }
            a { color: #001b44; }
            p { line-height: 1.5; }
            h1 { text-align: center; }
            h2 { font-weight: 500; }
        </style>
        <title>SharedID Opt Out</title>
    </head>
    <body>
        <main>
            <h1>SharedID</h1>
            <h2>Opt Out</h2>
            <p id="message">Checking opt out status...</p>
        </main>
        <script type="application/javascript">
            function checkOptOutStatus() {
                var hasOptOutCookie = document.cookie.indexOf("{{opt_out_cookie_name}}") != -1;
                var isSharedIdOptOut = document.cookie.indexOf("{{shared_id_cookie_name}}={{opt_out_value}}") != -1;

                var message = document.getElementById("message");

                if (hasOptOutCookie || isSharedIdOptOut) {
                    message.textContent = "Thank you. We have recorded your preferences."
                } else {
                    message.textContent = "The opt out was unsuccessful. Please note that you must have cookies enabled in order to opt out.";
                }
            }
            checkOptOutStatus();
        </script>
    </body>
</html>